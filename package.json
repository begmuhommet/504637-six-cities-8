{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=--no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server mocks/mock-server-data.json --port 4000 --host localhost"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/got": "9.6.12",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "1.0.0-beta.2",
    "pino-pretty": "11.2.2",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.7.0",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "@typegoose/typegoose": "12.8.0",
    "chalk": "^5.3.0",
    "convict": "6.2.4",
    "dayjs": "1.11.13",
    "dotenv": "16.4.5",
    "got": "14.4.2",
    "inversify": "6.0.2",
    "mongoose": "8.7.0",
    "pino": "9.4.0",
    "reflect-metadata": "0.2.2"
  }
}
